{
    "name": "taobao 秒杀插件",
    "description": "",
    "version": "0.0.2",
    "icons": {
        "16": "image/seckill-16.png",
        "48": "image/seckill-48.png",
        "128": "image/seckill-128.png"
    },
    "permissions": [
        "storage",
        "tabs",
        "activeTab",
        "webRequest",
        "webRequestBlocking",
        "http://*/*",
        "https://*/*"
    ],
    "background": {
        "scripts": [
            "lib/jquery.js",
            "background.js"
        ],
        "persistent": true
    },
    "content_scripts": [
        {
            "matches": [
                "http://*/*",
                "https://*/*"
            ],
            "js": [
                "lib/utils.js",
                "content.js"
            ]
        }
    ],
    "manifest_version": 2,
    "browser_action": {
        "default_popup": "index.html",
        "default_icon": "image/seckill-16.png"
    },
    "content_security_policy": "script-src 'self' 'unsafe-eval'; object-src 'self'"
}